<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lay_detail_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/tv_itemid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:text="ID_6756"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"/>

                <EditText
                    android:id="@+id/tv_itemname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:text="Book"
                    android:textColor="@color/black"
                    android:layout_weight="3"/>

                <EditText
                    android:id="@+id/tv_barcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:text="Bar_6456"
                    android:textColor="@color/black"
                    android:layout_weight="3"/>

                <LinearLayout
                    android:id="@+id/lay_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_linear"
                    android:layout_weight="3"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="EDIT"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColor="@color/purple_500"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_saveedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_linear"
                    android:layout_weight="3"
                    android:layout_marginRight="5dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="SAVE"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColor="@color/purple_500"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_linear"
                    android:layout_weight="3"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="DELETE"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColor="@color/purple_500"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>